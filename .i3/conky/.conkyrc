out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

# Update interval in seconds
update_interval 2.0

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Shortens units to a single character (kiB->k, GiB->G, etc.). Default is off.
short_units yes

# How strict should if_up be when testing an interface for being up?
# The value is one of up, link or address, to check for the interface
# being solely up, being up and having link or being up, having link
# and an assigned IP address. 
if_up_strictness address

# Add spaces to keep things from moving about?  This only affects certain objects.
# use_spacer should have an argument of left, right, or none
use_spacer left

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale no

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# Stuff after 'TEXT' will be formatted on screen
TEXT
# JSON for i3bar
 [
  { "full_text" : "${exec ~/dotfiles/.i3/scripts/sp current-conky}", "color" : "\#ffffff" },
  { "full_text" : "${exec cat /dev/shm/weather.out}", "color" : "\#ffffff" },
  { "full_text" : "${exec ~/dotfiles/.i3/scripts/status-sd}${exec ~/dotfiles/.i3/scripts/status-scratch}" , "color" : "\#ffffff" },
  { "full_text" : "VPN${if_up tun0}: ${addr tun0}${endif}" , "color" : ${if_up tun0} "\#00ff00"${else}"\#ff0000"${endif} },
  { "full_text" : "W:${if_up wlan0} ${exec ~/dotfiles/.i3/scripts/status-wifi-strength}[${wireless_essid wlan0}][ ${totaldown wlan0}  ${totalup wlan0}]${else}${endif}" , "color" : ${if_up wlan0} "\#00ff00"${else}"\#ff0000"${endif} },
  { "full_text" : "E${if_up eth0}: [ ${totaldown eth0}  ${totalup eth0}]${else}${endif}" , "color" : ${if_up eth0} "\#00ff00"${else}"\#ff0000"${endif} },
  { "full_text" : "${execi 5 ~/dotfiles/.i3/scripts/status-battery}", "color" :
    ${if_match ${exec acpi -b | sed 's/.*,\s\([0-9][0-9]*\)%.*/\1/'}<30}"\#ff0000"${else}"\#ffffff"${endif} },
  { "full_text" : "T:${acpitemp}" , "color" : ${if_match ${acpitemp}<60}"\#ffffff"${else}"\#ff0000"${endif} },
  { "full_text" : "RAM: ${memperc}%" , "color" : ${if_match ${memperc}<90}"\#ffffff"${else}"\#ff0000"${endif} },
  { "full_text" : "CPU: ${loadavg 1} ${cpu cpu0}%", "color" : ${if_match ${loadavg 1}<2}"\#ffffff"${else}"\#ff0000"${endif} },
  { "full_text" : "APT: ${execi 5 cat /dev/shm/apt.stat}", "color" : ${if_match ${exec cat /dev/shm/apt.stat}>0}"\#ffa500"${else}"\#ffffff"${endif}  },
  { "full_text" : "VOL: ${execi 5 ~/dotfiles/.i3/scripts/status-volume vol}", "color" : "\#${execi 2 ~/dotfiles/.i3/scripts/status-volume sound-sink-mute-status}"  },
  { "full_text" : "[${exec cat /dev/shm/icanhazip.out} ", "color" : "\#00ffff" },
  { "full_text" : " ${exec date +%a} ${exec date +%F} ${exec date +%T}]", "color" : "\#${exec ~/dotfiles/.i3/scripts/status-caps}" }
 ],
