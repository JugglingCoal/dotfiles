#avoid flicker
double_buffer yes

#own window to run simultanious 2 or more conkys
own_window  yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorate,sticky,skip_taskbar,skip_pager 

#borders
draw_borders no
#border_margin 1

#shades
draw_shades no

#position
gap_x 0
gap_y 3
alignment top_left

#behaviour
update_interval 3.0

#colour
default_color  808080
own_window_colour D6D6D6

#font
use_xft yes
xftfont Sans:pixelsize=10

#to prevent window from moving
use_spacer none
minimum_size 1350 0

